<div class="flex-row d-flex justify-content-center">

<div class="col-md-8">
<div class="card mt-5">

    <div class="card-body">
    <%= form_for @category do |f| %>


    <div class="form-group">
    <%= markdown f.label :title%>
    <%= markdown f.text_field :title, class: 'form-control' %>

    </div>

    <div class="form-group">


    <%= f.label :text%>
    <%= f.text_area :text, class: 'form-control'%>

    </div>

    <%= f.submit I18n.t('create_category') %>
  </div>
<% end %>
