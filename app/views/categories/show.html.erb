<div class="container-fluid mt-3">
  <h1>Category: <%= @category.title%></h1>
<h3><%= @category.title %></h3>
<h3><%= @category.text %></h3>




<%= link_to "Edit", edit_category_path(@category.id), class: 'btn btn-primary' %>
<%= link_to "Delete", category_path(@category.id), method: :delete, class: 'btn btn-danger' %>
<%= link_to "Back", categories_path, class: 'btn btn-secondary'%>
</div>


Subcategories:
  <% @category.subcategories.each do |subcategory| %>
    <%= link_to subcategory.title, subcategory_path(subcategory.id) %>
    <p>
    </p>
  <% end %>
</div>
