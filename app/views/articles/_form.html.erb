<div class="flex-row d-flex justify-content-center">

<div class="col-md-8">
<div class="card mt-5">

    <div class="card-body">
    <%= form_for @article do |f| %>


    <div class="form-group">
    <%= markdown f.label :title%>
    <%= markdown f.text_field :title, class: 'form-control' %>

    </div>

    <div class="form-group">


    <%= f.label :body%>
    <%= f.text_area :body, class: 'form-control'%>

    </div>

  <%= f.select :subcategory_id, Subcategory.all.map {|c| [c.title, c.id]} %>

  <div>
    <%= f.submit  %>
  </div>
<% end %>
