<div class="container">
    <div class="row">


    <div class="col-md-8">

    <div class="row">


     <% @articles.each do |article| %>
        <div class="col-md-6">
            <div class="card mt-3">
                <div class="card-body">
                  <h3><%= link_to article.title, article_path(article.id) %></h3>

                    <%= link_to "View", article_path(article.id), class: 'btn btn-primary'%>
                </div>
            </div>
         </div>
      <% end %>
  </div>
</div>
