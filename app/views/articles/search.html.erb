<% if @results.any? %>
  <h3><%= I18n.t('results')%>(<%= @total_results %>):</h3>
  <ol>
  <% @results.each do |article| %>
    <li><%= link_to article.title, article_path(article.id) %> Subcategory: <%= link_to article.subcategory.title, subcategory_path(article.subcategory.id) %></li>
  <% end %>
  </ol>
<% else %>
  Results not found :(
<% end %>


<%= paginate @query %>
